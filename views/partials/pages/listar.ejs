<div class="card">
  <div class="card-header">
    <h3>Listar perguntas</h3>
  </div>
  <div class="card-body">
    <table class="table table-dark">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Título</th>
          <th scope="col">Descrição</th>
          <th scope="col">Data criação</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% for (let pergunta of perguntas) { %>
        <tr>
          <td><%= pergunta.id %></td>
          <td><%= pergunta.titulo %></td>
          <td><%= pergunta.descricao %></td>
          <td><%= moment(pergunta.dataCriacao).format('DD/MM/YYYY HH:mm:ss') %></td>
          <td> 
            <a class="btn btn-light btn-block" href="/responder/<%= pergunta.id %>">Responder</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
